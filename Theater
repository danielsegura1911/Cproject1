
#include <stdio.h>
    int rowprice[15];
    int map[15][30];
    int sold = 0;
    
int prices(){
    int row = 1;
    for (int count=1; count<=15; count++){
        printf("row:%d",row);
        row++;
        printf(" $%d\n",rowprice[count]);
    }
    board();
}

int tickets(){
    int choice1;
    int choice2;
    int input = 0;
    printf("please pick what row you would like\n");
    scanf("%d\n", &choice1);
    printf("row", choice1);
    printf("please pick what seat you would like in that row\n");
    scanf("%d\n", &choice2);
    printf("row%d\n", choice1);
    printf("seat%d\n", choice2);
    choice1--;
    choice2--;
    map[choice1][choice2] = 1;
    sold = sold + rowprice[choice1];
    printf("Would you like to buy another ticket?\n");
    printf("1. yes\n");
    printf("2. no\n");
    scanf("%d\n", &input);
    if(input==1){
        tickets();
    }
    else{
        board();
    }
}

int seats(){
    
    for(int count=0; count <=15; count++){
        for(int second = 0; second <= 30; second++){
          int i = map[count][second];
          if(i == 1){
              printf("*");
          }
          else{
              printf("#");
          }
        }
        printf("\n");
    }
    board();
    
}
int sales(){
    printf("You have sold $%d", sold);
    printf("worth of tickets\n");
}
int quit(){
    return 0;
}
    
    int board(){
         int input;
    printf("**********Theater************\n");
    printf("1. View Seat prices\n");
    printf("2. purchase tickets\n");
    printf("3. veiw seat avalabiltiy\n");
    printf("4. Veiw ticket sales\n");
    printf("5. Quit\n");
    printf("Enter your choice (1-5):\n");
    scanf("%d", &input);
    printf("you entered:%d\n",input);
    
    if (input == 1){
        prices();
    }
    else if (input == 2){
        tickets();
    }
    else if (input == 3){
        seats();
    }
    else if (input == 4){
        sales();
    }
    else if (input == 5){
        quit();
    }
    else{
        printf("error invalid input\n");
        board();
    }
    }


int main()
{
    int h = 1;
    printf("Please enter the prices for each row\n");
    for(int count = 0; count<= 14; count++){
        int i;
        printf("Row %d\n", h);
        scanf(" %d",&i);
        h++;
        rowprice[count] = i;
        
    }
    board();
    
}
